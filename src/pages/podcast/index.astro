---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import Parser from 'rss-parser';

const parser = new Parser();
const feed = await parser.parseURL('https://feed.xyzfm.space/vadx8cv4dgcb');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} | Podcast`}  description={SITE_DESCRIPTION} />
		<script>
			document.body.addEventListener('mouseover', (event) => {
				const target = event.target as HTMLElement;
				if (target.tagName === 'IMG') {
					target.classList.add('rotate');
				}
			});
		  
			document.body.addEventListener('mouseout', (event) => {
				const target = event.target as HTMLElement;
				if (target.tagName === 'IMG') {
					target.classList.remove('rotate');
				}
			});
		</script>
		<style>
			ul {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul img {
				width: 100%;
				object-fit: cover;
				border-radius: 50%;
				transition: transform 0.5s ease-in-out;
				mask-image: radial-gradient(circle, transparent 12%, black 12%);
			}
			ul img.rotate {
				animation: rotateAnimation infinite 5s linear;
			}
			@keyframes rotateAnimation {
				from {
					transform: rotate(0deg);
				}
				to {
					transform: rotate(360deg);
				}
			}
			ul a {
				display: block;
				text-decoration: none;
				color: inherit;
				text-align: center;
				width: 100%;
			}
			ul .content {
				padding: 1rem;
			}
			ul .title {
				margin: 0.5rem 0;
				font-size: 1rem;
				color: rgb(var(--black));
				line-height: 1.2;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						feed.items.map((item) => (
							<a href={`/podcast/${item.guid}/`}>
								<img src={item.itunes.image} alt="" />
								<div class="content">
									<h4 class="title">{item.title}</h4>
								</div>
							</a>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
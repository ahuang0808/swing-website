---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | About`} description={SITE_DESCRIPTION} />
    <style>
      main {
        flex-direction: column;
      }
      .contact {
        display: flex;
        flex-direction: column;
        margin-bottom: 0.3em;
      }
      .contact strong{
        display: table-cell;
        font-family: 'Avenir Medium', 'SourceHanSansCN';
        width: 7em;
      }
      .contact a{
        display: table-cell;
        text-decoration: none;
        color: rgb(var(--gray-less-dark));
      }
      .swing {
        display: flex;
      }

      .column {
        flex: 1;
      }

      .column.left {
        font-size: 3em;
        flex: 0 0 35%;
        padding-bottom: 1em;
      }

      .column.right {
        text-align: justify
        flex: 1;
        padding-right: 15%;
        padding-left: 2em;
      }
      .column.right .swing-en {
        padding-top: 1em;
      }
      .column.right .contact {
        display: flex;
        flex-direction: column;
        padding-top: 3em;
      }

      .creators {
        display: flex;
        padding-top: 5em;
      }

      .creator {
        display: flex;
        flex: 1; 
      }
      .creator .profile {
        flex: 0 0 auto;
        flex-direction: column;
        width: auto;
        max-width: 180px;
      }
      .creator .contact {
        flex: 1;
        padding-left: 2em;
        padding-top: 1em;
        font-size: var(--small-text-font);
      }

      .creator img {
        width: 100%;
        height: auto;
        border-radius: 50%;
        margin-bottom: 1em;
      }
      .creator .name{
        font-size: var(--header-text-font); 
        text-align: center;
      }
      @media (max-width: 1200px) {
          .column.right {
            padding-right: 0;
          }
          .creators {
              flex-direction: column;
              padding-top: 1em;
          }
          .creator {
            display: flex;
            flex: 1; 
            padding-top: 3em;
          }

          .creator .profile {
            flex: 0 0 35%;
            min-width: 35%;
          }

          .creator img {
            max-width: 180px;
            height: auto;
            border-radius: 50%;
            margin-bottom: 1em;
          }

          .creator .name {
            padding-right: calc(100% - 180px);
          }
      }
      @media (max-width: 720px) {
          .swing {
              flex-direction: column;
          }
          .column.left {
            font-size: 2em;
            flex: 0 1 auto;
          }

          .column.right {
            padding-left: 0;
            padding-right: 0;
          }
          .creator img {
            margin-bottom: 0.5em;
          }
          .creator .name {
            padding-right: 0;
            font-size: var(--small-text-font);
          }
          .creator .contact {
            flex: 1;
            padding-left: 0.5em;
            padding-top: 0.5em;
            font-size: 12px;
          }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
        <div class="swing">
          <div class="column left">
            About Swing
          </div>
          <div class="column right">
              <div class="swing-cn">

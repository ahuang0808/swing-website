---
interface Props {
	backgroundColor?: string;
	color?: string;
}

const today = new Date();
const { backgroundColor, color } = Astro.props;
const footerColor = color ? color : 'rgb(var(--gray))';
---

<footer style={`background-color: ${backgroundColor}; color: ${footerColor};`}>
	&copy; {today.getFullYear()} swing studio. All rights reserved.
</footer>
<style>
	footer {
		padding: 1em;
		color: rgb(var(--gray));
		text-align: center;
	}
</style>
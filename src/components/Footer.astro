---
interface Props {
	backgroundColor?: string;
}

const today = new Date();
const { backgroundColor = 'white' } = Astro.props; // 默认背景颜色为白色
---

<footer style={`background-color: ${backgroundColor};`}>
	&copy; {today.getFullYear()} swing studio. All rights reserved.
</footer>
<style>
	footer {
		padding: 1em;
		color: rgb(var(--gray));
		text-align: center;
	}
</style>